<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dimen_20dp"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tvNameUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/user_detail_title"
        android:paddingTop="@dimen/dimen_15dp"
        android:text="Titulo"
        />

    <TextView
        android:id="@+id/tvEmailUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/user_detail_description"
        android:text="Titulo"/>

    <TextView
        android:id="@+id/tvPhoneUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/user_detail_description"
        android:text="Titulo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/user_detail_title"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:text="@string/post"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUserPostList"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/item_user_post" />

    <include
        android:id="@+id/vError"
        layout="@layout/section_error"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pbProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>